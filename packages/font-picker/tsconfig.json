{
  "include": ["src", "types"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "./dist/esm",
    "declarationDir": "dist/types",
    "types": [
      "bun-types" // add Bun global
    ]
  }
}