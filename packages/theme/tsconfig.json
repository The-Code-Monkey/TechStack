{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "./dist/esm",
    "declarationDir": "dist/types",
    "types": ["bun-types"]
  }
}