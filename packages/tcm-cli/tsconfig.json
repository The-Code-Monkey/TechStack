{
  "include": ["src/**/*"],
  "exclude": ["src/template/**/*"],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
