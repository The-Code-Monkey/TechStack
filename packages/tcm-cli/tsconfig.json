{
  "include": ["src/**/*"],
  "exclude": ["src/template/**/*"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
