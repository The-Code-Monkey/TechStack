{
  "include": ["src"],
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "./dist/esm",
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["bun-types", "dom"]
  }
}