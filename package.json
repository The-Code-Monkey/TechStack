{
  "name": "techstack",
  "description": "A collection of self built packages plus some forks for web development",
  "version": "1.0.12",
  "main": "index.js",
  "author": "The-Code-Monkey",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build.tsx",
    "clean": "git clean -xdf",
    "test:fix": "bun test --fix",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint -- --fix",
    "lint:cms": "cd platforms/react-cms && bun run lint",
    "size": "lerna run size",
    "lerna:link": "lerna link",
    "lerna:changed": "lerna changed",
    "lerna:version": "lerna version --conventional-commits --exact --yes",
    "lerna:publish": "yarn lerna:changed && yarn lerna:version && lerna publish from-package --no-verify-access --yes",
    "build-storybook": "lerna run build-storybook --stream -- -o build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "bun-types": "^1.0.1",
    "husky": "8.0.3",
    "jest-resolve": "^29.7.0",
    "lerna": "7.2.0"
  },
  "packageManager": "yarn@3.6.3"
}
