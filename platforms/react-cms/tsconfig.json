{
  "extends": "../../tsconfig.esm.base.json",
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/esm",
    "declarationDir": "dist/types",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
