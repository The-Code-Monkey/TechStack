{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2019",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "outDir": "./dist/esm",
    "rootDir": "src",
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types"
  }
}