{
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore(release): version",
      "allowBranch": ["master", "dev", "feature/*"],
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "workspaces": [
    "packages/*",
    "platforms/*"
  ],
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
