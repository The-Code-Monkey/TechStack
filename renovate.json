{
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "constraints": {
    "node": ">= 14.0.0"
  },
  "rangeStrategy": "pin",
  "labels": ["dependencies"],
  "automerge": true,
  "rollbackPrs": false,
  "rollback": {
      "automerge": false
  },
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "updateInternalDeps": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["@aw-web-design/*"],
      "groupName": "@aw-web-design mono repo"
    }
  ],
  "ignoreDeps": ["execa", "ora", "trim"]
}
