{
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "rangeStrategy": "pin",
  "automergeStrategy": "squash",
  "automerge": true,
  "prConcurrentLimit": 1,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "enabled": true
  },
  "packageRules": [
    {
	    "packageNames": ["node"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["@techstack/*"],
      "groupName": "techstack mono repo",
      "enabled": true,
      "rollback": false
    }
  ],
  "updateInternalDeps": true
}
