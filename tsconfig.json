{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "lib": ["ESNext", "dom"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "bun-types" // add Bun global
    ]
  }
}